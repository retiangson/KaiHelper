<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Main dark theme for the app (unchanged) -->
    <style name="Theme.KaiHelper" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Dark base background and text colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Status and navigation bars use same dark background -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Primary color palette -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>


    <!-- ✅ Fixed: Theme only for CanHub Cropper -->
    <style name="Theme.KaiHelper.Cropper" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Keep toolbar and DONE button visible -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- Allow space for system status bar -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowFullscreen">false</item>

        <!-- Status bar transparent so it doesn’t overlap -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Keep navigation bar consistent -->
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Match dark look -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Toolbar colors -->
        <item name="colorPrimary">@color/background_dark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>
