<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Main dark theme for the app -->
    <style name="Theme.KaiHelper" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Dark base background and text colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Status and navigation bars use same dark background -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Primary color palette -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!-- ✅ Dedicated theme for CanHub Cropper (light toolbar for visibility) -->
    <style name="Theme.KaiHelper.Cropper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ✅ Ensure ActionBar and title are visible -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- ✅ Toolbar background -->
        <item name="colorPrimary">@color/background_dark</item>
        <item name="colorSurface">@color/background_dark</item>

        <!-- ✅ Make toolbar icons and text white -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>

        <!-- ✅ Optional: keep system bars dark -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
</resources>
