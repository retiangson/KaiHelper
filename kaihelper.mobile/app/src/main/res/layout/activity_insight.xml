<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insightRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".ui.InsightActivity">

    <!-- ✅ Use vertical LinearLayout for natural top-to-bottom stacking -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ✅ Top App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/insightTopAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="#1E1E1E"
            app:title="Insights"
            app:titleTextColor="#FFFFFF"
            app:navigationIcon="@drawable/ic_insight" />

        <!-- ✅ Tabs for Year / Month / Week -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabInsightFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            app:tabTextColor="#AAAAAA"
            app:tabSelectedTextColor="#03A9F4"
            app:tabIndicatorColor="#03A9F4"
            app:tabIndicatorHeight="3dp"
            app:tabGravity="fill"
            app:tabMode="fixed" />

        <!-- ✅ Scrollable charts area -->
        <ScrollView
            android:id="@+id/scrollCharts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Chart by Category -->
                <TextView
                    android:id="@+id/tvCategoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spending by Category"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartByCategory"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="8dp" />

                <!-- Chart by Localization -->
                <TextView
                    android:id="@+id/tvLocalizationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spending by Localization"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartByLocalization"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp" />
            </LinearLayout>
        </ScrollView>

        <!-- ✅ Bottom Action Bar always stays at the bottom -->
        <include
            android:id="@+id/bottomActionBar"
            layout="@layout/layout_bottom_bar" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
