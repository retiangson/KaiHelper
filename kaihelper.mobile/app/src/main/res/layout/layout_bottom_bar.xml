<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomActionBar"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#1E1E1E"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingHorizontal="16dp"
    android:elevation="12dp">

    <!-- Funding -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconFunding"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_wallet"
            app:tint="#03A9F4"
            android:contentDescription="Funding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Funding"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Transaction -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconTransaction"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_transaction"
            app:tint="#03A9F4"
            android:contentDescription="Transaction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Camera / Upload -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconCamera"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_camera"
            app:tint="#03A9F4"
            android:contentDescription="Upload receipt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Insight -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconInsight"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_insight"
            app:tint="#03A9F4"
            android:contentDescription="Insight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insight"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Overview -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconOverview"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_overview"
            app:tint="#03A9F4"
            android:contentDescription="Overview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
